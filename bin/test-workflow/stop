#!/usr/bin/env bash
set -uo pipefail

source utils.sh

if [[ "${CONJUR_OSS_HELM_INSTALLED}" == "true" ]]; then
  ./cleanup_helm.sh
  ./cleanup_namespaces.sh
else
  run_command_with_platform "
    ./cleanup_helm.sh
    pushd temp/kubernetes-conjur-deploy-$UNIQUE_TEST_ID && ./stop && popd
    ./cleanup_namespaces.sh
  "
  rm -rf temp/kubernetes-conjur-deploy-"$UNIQUE_TEST_ID"
fi
